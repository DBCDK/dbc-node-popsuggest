{
  "name": "dbc-node-popsuggest",
  "version": "0.0.1",
  "description": "Client for the DBC XP suggestion service",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel/register src/__tests__ -R mocha-junit-reporter",
    "test:watch": "mocha --compilers js:babel/register src/__tests__ -w",
    "build": "npm run cleardest && babel ./src -d dist --ignore __tests__",
    "cleardest": "rm -rf ./dist",
    "lint": "eslint ./src",
    "lint:checkstyle": "eslint ./src  -o report.xml -f checkstyle",
    "watch": "npm run cleardest && babel ./src --watch -d dist --ignore __tests__"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DBCDK/dbc-node-popsuggest"
  },
  "author": "DBC A/S",
  "license": "ISC",
  "dependencies": {
    "es6-promise": "^2.1.1",
    "node-rest-client": "^1.5.1"
  },
  "devDependencies": {
    "babel": "^5.5.6",
    "babel-core": "^5.5.6",
    "babel-eslint": "^3.1.9",
    "chai": "^3.0.0",
    "eslint": "^0.21.0",
    "mocha": "^2.2.5",
    "mocha-junit-reporter": "^1.4.0"
  }
}
